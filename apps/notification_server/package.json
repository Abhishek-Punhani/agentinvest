    "kafkajs": "^2.2.4",
    "prom-client": "^15.1.3",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "prisma": "5.22.0",
    "tsx": "^4.20.6",
    "typescript": "5.9.2"
  }
