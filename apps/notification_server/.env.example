# Node Environment
NODE_ENV=development

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=notification-server
KAFKA_GROUP_ID=notifications-consumer
METRICS_PORT=9201

# Kafka Security (Optional - for production/secure Kafka clusters)
# KAFKA_SECURITY_PROTOCOL=SSL
# KAFKA_SSL_CAFILE=/path/to/ca-cert.pem
# KAFKA_SASL_MECHANISM=plain
# KAFKA_SASL_USERNAME=your-kafka-username
# KAFKA_SASL_PASSWORD=your-kafka-password

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname?schema=public

# Redis Configuration
# Option 1: Use Redis URL (recommended)
REDIS_URL=redis://localhost:6379
# Option 2: Use individual connection parameters (if REDIS_URL is not set)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
